<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<% if(message.length>0){ %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-green-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= message %>
        </span>
    </div>
<% } %>

<div class="w-full h-full flex flex-col md:flex-row px-5 md:px-10 py-10 md:py-20">
    <div class="w-full md:w-1/5 flex flex-col items-start">
        <div class="flex items-center gap-2">
            <!-- Any additional content can go here -->
        </div>
        <div class="flex flex-col mt-10 md:mt-20">
            <a class="block w-fit mb-2 text-zinc-500" href="/shop">Back to Shop</a>
        </div>
    </div>
    
    <div class="w-full md:w-4/5 flex flex-col items-start gap-5 md:gap-10">
        <% if (order.products.length === 0) { %>
            <h1 class="text-xl text-center w-full">You Don't Have Anything In Cart</h1>
        <% } else { %>
            <% order.products.forEach(product => { %>
                <div class="flex flex-col md:flex-row w-full  justify-between bg-white shadow-md rounded-lg overflow-hidden">
                    <div class="w-full md:w-60 flex items-center justify-center bg-<%= product.bgcolor %> p-5">
                        <img class="h-48" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex flex-col w-full md:w-2/3 p-5">
                        <div class="flex justify-center rounded-md md:justify-start bg-<%= product.panelcolor %> text-<%= product.textcolor %> mb-4">
                            <h3 class="text-xl p-5 "><%= product.name %></h3>
                        </div>
                        <div class="px-2 text-xl">
                            <div class="flex flex-col md:flex-row mt-2">
                                <h4 class="w-2/3">Price</h4>
                                <h4>₹ <%= product.price %></h4>
                            </div>
                            <div class="flex flex-col md:flex-row mt-2">
                                <h4 class="w-2/3">Discount</h4>
                                <h4>₹ <%= product.disount %></h4>
                            </div>
                            <div class="flex flex-col md:flex-row mt-2">
                                <h4 class="w-2/3">Shipping</h4>
                                <h4>FREE</h4>
                            </div>
                        </div>
                        <div class="w-full h-px bg-black mt-4"></div>
                        <div class="flex flex-col md:flex-row mt-5">
                            <h3 class="w-2/3 text-bold text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl text-green-600">₹ <%= product.price - product.disount %></h3>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
