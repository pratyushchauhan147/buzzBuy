<%- include('./partials/header') %>
<%- include('./partials/messages') %>
<div class="w-full min-h-screen flex flex-col md:flex-row px-5 md:px-20">
    <div class="w-full md:w-2/5 flex items-center justify-center min-h-screen mb-10 md:mb-0">
        <div class="w-full px-5 md:px-10">
            <h3 class="text-3xl md:text-4xl">Welcome to <span class="text-yellow-400 font-semibold">BuzzBuy</span></h3>
            <h4 class="text-xl md:text-2xl mb-5">Create Your Account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="Full Name" required  name="fullname">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" required  placeholder="Email" name="email">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password"  required  placeholder="Password" name="password">

                    <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" required  placeholder=" Your City" name="city">
                    <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" required  placeholder=" Ph. NO" name="contact">
                        
                        <textarea required placeholder="Address" name="address" class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" id="user-address" ></textarea>  
                <input class="px-5 rounded-sm w-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                    value="Create My Account">
            </form>
            <a  class="w-full flex  justify-center text-zinc-500 underline" href="/loginpage">Already have a account? Try Login</a>
        </div>
    </div>
    
</div>
<%- include('./partials/footer') %>
